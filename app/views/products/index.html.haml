- title "Products"

%table
  %tr
    %th Name
    %th Unit price
    %th Brand
    %th Quantity
    %th Comments
  - for product in @products
    %tr
      %td= product.name
      %td= product.unit_price
      %td= product.brand
      %td= product.quantity
      %td= product.comments
      %td= link_to 'Show', product
      %td= link_to 'Edit', edit_product_path(product)
      %td= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Product", new_product_path
